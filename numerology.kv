#-*-coding:utf8;-*-
#:	import Factory kivy.factory.Factory
#:import random random.random
BoxLayout:
    orientation: 'vertical'
    
    ScreenManager:
        id: sm

        Screen:
            name: 'dataInputScreen'
            #hue: random()
            canvas:
                Color:
                    hsv: random(), .5, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            BoxLayout:
                orientation: 'vertical'
                columns: 1
                padding: '5dp'
                spacing: 5 
                
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'Архив ...'
                    #on_release: sm.current = 'cardScreen'

                
                Label:
                    #size_hint_y: None
                    #height: '50dp'
                    text: '[b]Нова карта[b]'
                    font_size: '64dp'
                    markup: 'True'
                    
                Label:
                    text:'Име'
                
                TextInput:
                    size_hint_y: None
                    height: '32dp'
                    multiline: False
                    text: ''
                
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        group: 'g_gender'
                    Label:
                        text: 'Мъж'

                    CheckBox:
                        group: 'g_gender'
                    Label:
                        text: 'Жена'
                        
                Label:
                    text:'Дата на раждане'
                
                TextInput:
                    size_hint_y: None
                    height: '32dp'
                    multiline: False
                    text: ''

                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'Calculate'
                    on_release: 
                        sm.transition.direction = 'left'
                        sm.current = 'cardScreen'

        Screen:
            name: 'cardScreen'
            
            BoxLayout:
                orientation: 'vertical'
            
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'New person'
                    on_release: 
                        sm.transition.direction = 'right'
                        sm.current = 'dataInputScreen'
