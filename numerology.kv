#-*-coding:utf8;-*-
#:	import Factory kivy.factory.Factory
BoxLayout:
    orientation: 'vertical'
    
    ScreenManager:
        id: sm

        Screen:
            name: 'dataInputScreen'
                
            BoxLayout:
                orientation: 'vertical'
                
                Label:
                    text:'Име'
                
                TextInput:
                    size_hint_y: None
                    height: '32dp'
                    multiline: False
                    text: ''
                
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        group: 'g_gender'
                    Label:
                        text: 'Мъж'

                    CheckBox:
                        group: 'g_gender'
                    Label:
                        text: 'Жена'
            
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'Calculate'
                    on_release: sm.current = 'cardScreen'

        Screen:
            name: 'cardScreen'
            
            BoxLayout:
                orientation: 'vertical'
            
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'New person'
                    on_release: sm.current = 'dataInputScreen'
