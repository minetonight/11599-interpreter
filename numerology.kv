#:import Factory kivy.factory.Factory
BoxLayout:
    orientation: 'vertical'
    
    ScreenManager:
        id: sm

        Screen:
            name: 'dataInputScreen'
                
            BoxLayout:
                orientation: 'vertical'
                
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'Calculate'
                    on_release: sm.current = 'cardScreen'

        Screen:
            name: 'cardScreen'
            
            BoxLayout:
                orientation: 'vertical'
            
                Button:
                    size_hint: None, None
                    size: '150dp', '48dp'
                    text: 'New person'
                    on_release: sm.current = 'dataInputScreen'
